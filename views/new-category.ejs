<% include partials/header %>

<div style="padding: 20px 30px;">
    <div class="row">
        <div class="col s12 l9">
            <div class="card">
                <div class="card-action center-align">
                    <strong>Create a New Category</strong>
                </div>
                <div class="divider"></div>

                <form action="/category" method="POST" class="content-spacing">

                    <div class="row">
                        <div class="input-field col s12 l8">
                            <input name="category[name]" id="category-title" type="text" class="validate" required>
                            <label for="category-title">Category Title</label>
                        </div>
                    </div>

                    <a class="waves-effect waves-teal btn-flat">Cancel</a>

                    <button class="btn waves-effect waves-light black" type="submit">Save
                        <i class="material-icons right">send</i>
                    </button>
                </form>

            </div>
        </div>
    </div>

</div>


<% include partials/footer %>